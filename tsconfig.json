{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "esnext",
        "lib": ["esnext"],
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"],
            "@/*": ["*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

