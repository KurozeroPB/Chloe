{
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        // "strictNullChecks": true,
        "strictFunctionTypes": true,
        // "strictPropertyInitialization": true,
        "strictBindCallApply": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noImplicitReturns": false,
        "declaration": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowJs": true,
        "checkJs": true,
        "rootDir": ".",
        "outDir": "build",
        "typeRoots": [
            "./node_modules/@types",
            "./src/@types"
        ],
        "paths": {
            "*": ["node_modules/*"],
            "~/*": ["src/*"],
            "@/*": ["*"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

